<% layout('layouts/boilerplate') %>  
<div class="row">
    <div class="text-center">NEW GYM!</div>
    <div class="col-6 offset-3">
        <form action="/gymlist" method="POST">
            <div class = "mb-3">
                <label class="form-label" for="name">
                    Gym Name
                </label>
                <input class="form-control" type="text" id="name" name="title">
            </div>
            <div class = "mb-3">
                <label for="price" class="form-label">Gym Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Username" aria-describedby="price-label", name="price">
                </div>
            </div class = "mb-3">
            <div>
                <label class="form-label" for="location">
                    Gym Location
                </label>
                <input class="form-control" type="text" id="location" name="location">
            </div>
            <div class = "mb-3">
                <label class="form-label" for="description">
                    Gym Description
                </label>
                <textarea class="form-control" type="text" id="description" name="description"></textarea>
            </div>
            <div class = "mb-3">
                <label class="form-label" for="image">
                    Gym image
                </label>
                <input class="form-control" type="text" id="image" name="image">
            </div>
            <div class="mt-3">
                <button class="btn btn-success" type="submit">Create Gym</button>
            </div>
        </form>
    </div>
</div>   
