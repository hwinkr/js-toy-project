<% layout('layouts/boilerplate') %>  
<div class="text-center"> <%= foundGym.title %> Detail Page </div>
<div class="card" style="width: 18rem;">
    <img src="<%= foundGym.image %> " class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= foundGym.title %> </h5>
      <p class="card-text"><%= foundGym.description %> </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"> $<%= foundGym.price %> /month</li>
      <li class="list-group-item"><%= foundGym.location %> </li>
    </ul>
    <div class="card-body">
        <a href="/gymlist/<%= foundGym.id %>/edit" class="card-link btn btn-warning">Go Edit</a>
        <form class ="d-inline" action="/gymlist/<%= foundGym._id %>?_method=DELETE " method="POST">
            <button class ="btn btn-danger" type="submit">go delete</button>
        </form>
    </div>
  </div>
    
